div, article, aside, footer, header, nav, section, dialog, figure, hgroup, menu
	position relative

a
	color clink
	text-decoration underline
	cursor pointer
	transition color .1s ease
	&:hover
		color cl2
	&:active
		color cl1
		transition none
	&:focus
		outline -webkit-focus-ring-color auto 3px

	&.link_dashed
		text-decoration none
		color clink
		&>span
			border-bottom 1px dashed @color
		&:hover
			color cl2
			span
				border-bottom-color cl2
	&.link_disabled
		color ctextdis!important
		cursor default

	&[class*='icon-']
		&:before
			transition 0
		&:empty
			text-decoration none
		@media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
			text-decoration none
	&[class*='icon-close']
		transition transform .15s
		&:before
			transition transform .15s
			margin 0
			min-width 0
		// &:hover
		// 	&:before
		// 		transform rotate(90deg)
		&:active
			&:before
				transform scale(.9)
				transition 0s
	&[class*='icon-favorites-solid']
		&:before
			color ctextwarning!important

	&[class*='icon-favorites']
		&:hover
			&:before
				color ctextwarning!important

	&.c_error
		&:hover
			color ctexterror + 10%


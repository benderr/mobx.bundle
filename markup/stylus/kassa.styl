@import 'variables.styl'

.widget_block
	padding-bottom 2px
.products_table_head
	font-size 12px
	color ctextlight
	margin-bottom 10px
.product_row
	padding 7px 20px
	margin 0 -20px
	border-bottom 1px solid cgrey09
	&:last-child
		border none
.products_table_head, .product_row
	display flex
	flex-flow row wrap
	input
		margin-top 14px
		&::-webkit-input-placeholder
			font-size 12px
			color #cgrey36
		&::-moz-placeholder
			font-size 18px
			color #cgrey50
		&:-ms-input-placeholder
			font-size 18px
			color #cgrey50
	.product_id
		flex 0 1 130px
	.product_name
		flex 1 1 auto
		margin 0 16px
	.product_price
		flex 0 0 100px
		text-align right
		
.sidebar_title
	font-size 14px
	text-transform uppercase
	color #FFF
	opacity 0.5
	padding 0 16px 25px
	
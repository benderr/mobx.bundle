@import 'nib'
@import 'variables.styl'

*
	margin 0
	padding 0
	outline none
body
	background cbglight
	color ctext
	font-size fzn
	font-family ffn

body,html
	min-height 100%

.c_light
	color ctextlight
.m_top_20
	margin-top 20px
.m_top_30
	margin-top 30px
.m_top_40
	margin-top 40px

.button
	background cl2
	color #fff
	font-weight fwm
	height 44px
	line-height 42px
	padding 0 40px
	text-transform uppercase
	text-decoration none
	border none
	display inline-block
	font-size fzn - 2px
	letter-spacing .5px
	border-radius brbut
	cursor pointer
	&:hover
		background-color cl2 + 5%
		box-shadow 0 2px 2px rgba(#000,0.1), 0 4px 18px -5px rgba(#000,0.2)
.small_text
	font-size fzn - 4px
	color ctextlight
	line-height 1.3
	p
		margin 0 0 5px
.wrap
	width 900px
	margin 0 auto
header
	padding 16px 0
.logo
	position relative
	width 151px
	height 28px
	background url(../images/logo.svg) no-repeat 0 0
	background-size 100% auto
	text-indent -10000em

section
	background #fff
	box-shadow 0px 2px 4px 0px rgba(0,0,0,0.09), 0px 0px 1px 0px rgba(0,0,0,0.22)
	padding 40px 20px 20px
	margin 0 0 30px
.title
	font-size 24px
	font-weight 100
	text-align center
	margin 0 0 40px


.form_group
	margin-bottom 15px
	clearfix()
.form_buttons
	margin-top 30px
	clearfix()
.form_horizontal
	.property_label
		padding-top 13px
.property_label
	color ctextlight
	text-align right
	float left
	width 30%
	margin-right 4%
.property_value
	float left
	width 45%
.field_block
	padding 12px 15px
	background cgrey03
	border 1px solid cbd
	width 100%
	box-sizing border-box
	&.summ
		width auto
		display inline-block

	&.total
		background cbghighlight
		border none
		font-size fzn + 4px
		display inline-block
		width auto
		margin-top -3px


.visa_mc_img
	display inline-block
	width 90px
	height 32px
	background url(../images/visa_mc.png) no-repeat 0 0
	background-size 100% auto
.info_text
	text-align center
	padding 80px 150px 120px
	.icon
		width 50px
		height 50px
		display inline-block
		margin 0 0 20px
		background url(../images/font_icons/info.svg) no-repeat 0 0
		background-size 100% auto
		opacity .2
	.title
		font-weight fwn
		font-size 20px
		margin 0 0 10px
iframe
	overflow hidden
	margin-bottom -15px

.loading_block
	position relative
	&[data-loading-text]
		&:after
			background-position center calc(50% - 12px)
	&:before
		content ' 'attr(data-loading-text)' '
		position absolute
		top 50%
		left 50%
		text-align center
		z-index 101
		transform translate(-50%, 10px)
		font-size fzn - 2px
		color ctext
		text-shadow 0 0 7px #fff, 0 0 7px #fff, 0 0 7px #fff, 0 0 7px #fff
		width 80%

	&:after
		transition background-color .5s ease
		content ''
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background-color #fff
		background-image url(../images/loading.gif)
		background-repeat no-repeat
		background-position center
		background-size 24px 24px
		z-index 100

@media screen and (max-width:900px)
	.wrap
		width 100%
		padding 0 10px
		box-sizing border-box
	section
		padding-top 30px

	.title
		text-align left
		margin-bottom 30px

	.property_label, .property_value
		float none
		width 100%
		text-align left
	.form_horizontal
		.property_label
			margin-bottom 5px
			padding-top 0
	.m_top_30
		margin-top 0
	.form_buttons
		.property_label
			display none
		.small_text
			margin-top 30px
	.icon-down-big
		&:before
			float right
			margin 26px 0 0 6px
			font-size 10px

// быстрое добавление в шапке

.header_add
	position absolute
	top 9px
	left calc(50% - 21px)
	a.add
		display block
		width 42px
		height 42px
		background #fff
		transition background-color .2s, opacity .2s
		border-radius 42px
		&:before, &:after
			content ''
			width 2px
			height 20px
			background #2072A3
			position absolute
			top 11px
			left 20px
			transition transform .35s
		&:after
			height 2px
			width 20px
			top 20px
			left 11px

		&.drop-enabled
			// opacity .9
			&:before, &:after
				transform rotate(135deg)



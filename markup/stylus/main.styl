@import 'nib'
@import 'variables.styl'

html, body

	background cbglight
	min-width 980px
	animation-name fadeIn
	animation-duration .8s


body
	overflow auto
	-webkit-overflow-scrolling touch



header
	position absolute
	top 0
	right 0
	left 0
	height 60px
	background saturate(cbglight - 5%, 10%)
	background-image linear-gradient(left, #00417B 0%, #2072A3 50%, #3AB0AB 100%)
	z-index 300
	transition box-shadow .5s
	box-shadow 0 5px 20px rgba(cl1,0.13)

	&.shadow
		box-shadow 0 12px 20px -8px rgba(cl1,0.13)
		transition box-shadow 1s

@media screen and (-webkit-min-device-pixel-ratio:0)
	header
		&.shadow
			box-shadow 0 15px 25px -8px rgba(cl1,0.13)

	_::-webkit-full-page-media, _:future, :root  .page_header
		&.shadow
			box-shadow 0 12px 20px -8px rgba(cl1,0.13)

// лого в шапке
.header_logo
	width 60px
	height 60px
	background #fff
	padding 18px 0 0 18px
	box-sizing border-box
	float left
	a
		display block
		width 24px
		height 24px
		background url(../images/header_logo.svg) no-repeat 0 0
		background-size 100%
		text-indent -10000em

// поиск в шапке

.header_search

	height 100%
	display inline-block
	z-index 1
	background #fff
	padding-left 10px
	background #fff url(../images/icon_search.svg) no-repeat 10px center
	background-size 18px auto
	&:after
		left 100%
		top 50%
		border solid transparent
		content " "
		height 0
		width 0
		position absolute
		pointer-events none
		border-color rgba(0, 0, 0, 0)
		border-left-color #fff
		border-width 13px
		border-top-width 30px
		border-bottom-width 30px
		margin-top -30px

	.name
		color ctext
		position absolute
		top 0
		left 38px
		padding 21px 0 0 0
		width 92px
		height 100%
		box-sizing border-box
		z-index 0
		text-transform uppercase
		font-size fzn - 2px
		font-weight fwr


	input
		position relative
		height 100%
		width 92px
		border none
		cursor pointer
		padding-left 0px
		padding-right 20px
		opacity 0
		box-sizing border-box
		z-index 10
		font-size fzn + 2px
		transition .2s opacity, .3s width, .1s margin .2s

		&::-webkit-input-placeholder
			color ctext
		&::-moz-placeholder
			color ctext
		&:-ms-input-placeholder
			color ctext!important


		&:focus, &.active
			width calc(50vw - 180px)
			margin-left 28px
			opacity 1
			transition .2s opacity, .3s width, 0s margin
			&::-webkit-input-placeholder
				color ctextholder
			&::-moz-placeholder
				color ctextholder
			&:-ms-input-placeholder
				color ctextholder!important

		// &:valid
		// 	opacity 1
		// 	width 250px
		// 	& ~ .name
		// 		opacity 0

// меню в шапке
.header_menu
	position absolute
	left 180px
	top 0
	width calc(50% - 180px - 30px)
	// width 28%
	box-sizing border-box

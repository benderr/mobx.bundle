.notice_anim
	max-height 0
	transition 1s
	overflow hidden
	.notice_block
		visibility hidden

	&.notice_out
		animation-fill-mode both
		animation-duration 1s
		animation-name noticeOut
		backface-visibility visible !important
		// transition 1s
		// transition-delay .3s
		max-height 300px
		.notice_block
			visibility visible


	&.notice_in
		animation-fill-mode both
		// animation-delay .2s
		animation-duration 1s
		animation-name noticeIn
		backface-visibility visible !important
		// transition .7s
		max-height 300px
		.notice_block
			visibility visible


	&:nth-child(1)
		animation-duration 1s
		animation-name noticeIn2





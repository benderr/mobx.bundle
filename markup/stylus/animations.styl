@keyframes noticeOut {
  0 {
    transform: perspective(1500px);
  }

  20% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -20deg);
    opacity: 1;
  }

  80% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    opacity: 0;

  }

  100% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    opacity: 0;
    max-height: 0;
  }
}

@keyframes noticeIn {
  from {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
    max-height: 0;
  }

  20% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
  }

  55% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -20deg);
    animation-timing-function: ease-in;

  }

  70% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 0deg);
    opacity: 1;
     max-height: 300px;
  }

  85% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -5deg);

  }

  100% {
    transform: perspective(1500px);
  }
}

@keyframes noticeIn2 {
  0% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
    max-height: 300px;
  }

  40% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -20deg);
    animation-timing-function: ease-in;

  }

  60% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 0deg);
    opacity: 1;
  }

  80% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -5deg);

  }

  100% {
    transform: perspective(1500px);
  }
}


@keyframes heartFlash {
  0% {
    transform: scale(1);
    opacity 1;
    color #fff
  }

  30% {
    transform: scale(1.4);
    opacity 0.6
  }
  100% {
    transform: scale(1);
    opacity 1
  }

}

@keyframes shake {
  10%, 90% {
    transform: translate3d(-1px, 0, 0);
  }

  20%, 80% {
    transform: translate3d(2px, 0, 0);
  }

  30%, 50%, 70% {
    transform: translate3d(-4px, 0, 0);
  }

  40%, 60% {
    transform: translate3d(4px, 0, 0);
  }
}

@keyframes rotatingSms {
  0% {
    transform: rotate(0deg);
  }
  50%{
  	transform: rotate(180deg);
  }
  100% {
    transform: rotate(360deg);
  }
}


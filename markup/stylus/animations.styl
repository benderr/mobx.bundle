@keyframes pageHide {
	0% {
		opacity 1
		visibility visible
		right 0px
	}
	99% {
		visibility visible
	}
	100% {
		opacity 0
		visibility hidden
		right -150px
	}
}

@keyframes pageOpen {
	0% {
		opacity: 0;
		right -150px
		visibility visible
	}
	100% {
		opacity: 1;
		right 0px
	}
}


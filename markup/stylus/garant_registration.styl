@charset "utf-8"

@import 'nib'
@import 'variables.styl'

.reg
	min-height 100%
	height 100%
	.garant_header
		z-index 100
		box-shadow: 0 2px 26px 0 rgba(0,0,0,0.24)


		.header_logo
			float none
			margin 0 auto
			width 348px

.reg_section
	position absolute
	top 0
	bottom 0
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	background url(../images/garant/reg_back.jpg) no-repeat center 0
	background-size cover
	overflow hidden


.reg_section_center
	z-index 10

.reg_title
	color #fff
	font-size 26px
	text-align center
	font-weight fwl
	margin 0 0 32px
.reg_content
	background #fff
	border-radius 2px
	box-shadow: 5px 5px 0 0 rgba(0,0,0,0.08);
	padding 50px 50px 34px
	width 320px
	&.registration_form
		width 560px

	.form_buttons
		text-align center
		.button
			min-width 208px
	.form_error
		text-align center
.reg_links
	text-align center
	margin-top 16px
	a
		color rgba(#fff,0.5)
		text-decoration none
		font-size fzn - 2px
		&:hover
			color #fff



.input_group.light
	display flex
	margin-bottom 10px
	.input_group_addon
		position absolute
		border none!important
		z-index 10
		background-color transparent
		border-color transparent
		background-clip padding-box
		box-shadow none
		font-size fzn + 6px
		padding-right 26px
		&:before
			transition color .23s
	input
		padding-left 0px!important
		background transparent
		border-radius 0!important
		box-shadow none
		border-bottom 1px solid cbd
		font-size fzn + 6px
		margin-left 56px
		&:focus
			border-color transparent!important
			border-bottom-color cl2!important
			border-radius 0!important
			&~.input_group_addon:before
				color cl2
		&.error
			border-color transparent!important
			border-bottom-color cerror!important
			background transparent!important
			color ctexterror
			&~.input_group_addon:before
				color cerror
		&.success
			border-bottom 1px solid cbd

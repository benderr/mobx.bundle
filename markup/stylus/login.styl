@charset "utf-8"

@import 'nib'
@import 'variables.styl'

.login
	min-height 100%
	height 100%
	.login_header
		z-index 100
		box-shadow: 0 2px 26px 0 rgba(0,0,0,0.24)


		.login_header_logo
			margin 15px auto 0
			width 164px
			a
				background url(../images/logo_emblem_w.svg) no-repeat 0 0
				background-size auto 24px
				padding-left 36px
				text-indent 0
				width auto
				font-size 22px
				color #fff
				font-weight fwl
				text-decoration none
				strong
					font-weight fwm

.login_section
	position absolute
	top 0
	bottom 0
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	background url(../images/login_back.jpg) no-repeat center 0
	background-size cover
	overflow hidden


.login_section_center
	z-index 10

.login_title
	color #fff
	font-size 26px
	text-align center
	font-weight fwl
	margin 0 0 32px
.login_content
	background #fff
	border-radius 2px
	box-shadow: 5px 5px 0 0 rgba(0,0,0,0.08);
	width 420px
	height 300px
	box-sizing border-box
	overflow hidden
	&.anim_enter_sms
		.login_auth_block, .login_sms_block
			transform translateY(-300px)
		.login_auth_block
			opacity 0
		.login_sms_block
			opacity 1

	.login_auth_block
		opacity 1
		.form_error
			margin -10px 0
	.login_sms_block
		opacity 0
		.form_error
			margin 15px 0 -33px
	.login_auth_block, .login_sms_block
		padding 50px 50px 34px
		height 300px
		box-sizing border-box
		transition transform .3s, opacity .4s

	.form_buttons
		text-align center
		.button
			min-width 208px
			&.disabled
				cursor wait
				background cl2
				color rgba(255,255,255,.3)

	.form_error
			text-align center

	.sms_confirm
		padding 0
		margin 0 -20px
		.sms_field
			margin 24px 0 67px


.login_links
	text-align center
	margin-top 20px
	a
		color rgba(#fff,0.5)
		text-decoration none
		font-size fzn - 2px
		margin 0 10px
		display inline-block
		&:hover
			color #fff



.input_group.light
	display flex
	margin 0 0 12px
	padding 0 20px 0 0
	box-sizing border-box
	.input_group_addon
		position absolute
		left 0
		border none!important
		z-index 10
		background-color transparent
		border-color transparent
		background-clip padding-box
		box-shadow none
		font-size fzn + 8px
		padding 0
		&:before
			transition color .23s
		&.addon_code
			font-size fzn + 6px
	input
		padding-left 0px!important
		background transparent
		border-radius 0!important
		box-shadow none
		border none
		border-bottom 1px solid cbd
		font-size fzn + 6px
		margin-left 56px
		&[type="password"]
			letter-spacing 2px
			-webkit-text-security: square
			&::-webkit-input-placeholder
				letter-spacing 0
			&::-moz-placeholder
				letter-spacing 0
			&:-ms-input-placeholder
				letter-spacing 0!important

		&:focus
			color ctext
			&~.input_group_addon
				color cl2
			&~.input_light_border_bottom
				opacity 1
				right 20px
		&.error
			border-color transparent!important
			border-bottom-color cerror!important
			background transparent!important
			color ctexterror
			animation: shake 1s cubic-bezier(.36,.07,.19,.97) both;
			transform: translate3d(0, 0, 0);
			&~.input_group_addon
				color cerror
			&:focus
				color ctext
		&.success
			border-bottom 1px solid cbd
		&:-webkit-autofill
			transition none
			box-shadow 0 0 0 1000px #fff inset
			background-clip content-box
			&:disabled
				box-shadow 0 0 0 1000px #f5f5f5 inset
	.input_light_border_bottom
		position absolute
		height 1px
		left 56px
		right 240px
		opacity 0
		bottom 0
		background cl2
		z-index 10
		transition opacity .3s, right .3s

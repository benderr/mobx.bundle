@import 'nib'
@import 'variables.styl'

::-webkit-input-placeholder
	color ctextholder
	font-weight 300
::-moz-placeholder
	color ctextholder
	font-weight 300
:-ms-input-placeholder
	color ctextholder!important
	font-weight 300

input[type="text"],
input[type="password"],
input[type="search"],
input[type="email"],
input[type="tel"],
input[type="time"],
input[type="date"],
input[type="number"],
textarea
	height 44px
	border 1px solid cbd
	border-radius brform
	display inline-block
	background-color #fff
	font-family ffn
	font-size fzn
	font-weight fwn
	padding 0 15px
	color ctext
	box-shadow inset 0px 2px 2px -2px rgba(0,0,0,0.18)
	box-sizing border-box
	vertical-align middle
	-webkit-appearance textfield
	transition border-color .2s, color .2s, background .2s, box-shadow .2s
	
	&:focus
		border-color cl2
		box-shadow inset 0px 2px 2px -2px rgba(0,0,0,0)


	&[disabled], &.disabled
		color ctextdis
		background #f5f5f5
		&::-webkit-input-placeholder
			color ctextdis
		&::-moz-placeholder
			color ctextdis
		&:-ms-input-placeholder
			color ctextdis!important


	// валидация
	&.error
		border-color cerror!important
		background-color cerror + 97%!important
		// animation error-border-flash .7s both
		&::-webkit-input-placeholder
			// color ctexterror
		&::-moz-placeholder
			// color ctexterror
		&:-ms-input-placeholder
			// color ctexterror!important
		// &:focus
		// 	border-color cl2

	&.valid, &.success
		border-color csucces
		// background-color csucces + 96%

	// размеры
	&.xsmall
		height 26px
		padding 0 6px
		font-size fzn - 2px
	&.small
		height 38px
		padding 0 10px
		font-size fzn - 2px
	&.big
		height 50px
		padding 0 15px
		font-size fzn + 2px

	// стиль 2
	&.second
		border-color transparent
		box-shadow 0 1px 1px rgba(0,0,0,0.12)
		&:focus
			box-shadow 0 1px 1px rgba(cl1,0.3)

	&:-webkit-autofill
		transition none
		box-shadow 0 0 0 1000px white inset
		&:disabled
			box-shadow 0 0 0 1000px #f5f5f5 inset

input[type="search"]::-webkit-search-decoration
	-webkit-appearance none
input[type="search"]::-webkit-search-cancel-button
	-webkit-appearance none


textarea
	padding 12px 15px 6px
	resize none
	min-height 44px
	&.small
		padding 6px 10px
		min-height  34px
	&.js_autosize
		transition none
		overflow-x hidden
		overflow-y auto!important
		max-height 126px
	&.textarea_middle
		min-height 65px
		max-height 146px
	&.textarea_big
		min-height 125px
		max-height 209px

.textarea_block
	clearfix()

	&.small
		textarea
			padding 6px 10px
			font-size fzn - 2px
		.textarea_text
			padding 0 10px 6px
			&.first_line
				padding 10px 10px 0
	&.disabled
		.textarea_text,
		.textarea_text.characters_left
			color ctextdis
		.textarea_border
			color ctextdis
			background #f5f5f5
		textarea
			color ctextdis
			&:focus ~ .textarea_border
				border-color inherit
	textarea
		box-shadow none
		border none
		z-index 10
		position relative
		background none!important
		&:focus ~ .textarea_border
			border-color cl2
		&.error ~ .textarea_border
			border-color cerror
			background-color cerror + 97%


	.textarea_border
		position absolute
		z-index 0
		top 0
		bottom 0
		right 0
		left 0
		border 1px solid cbd
		background #fff
		border-radius brform
		box-shadow inset 0px 2px 2px -2px rgba(0,0,0,0.18)
	.textarea_text
		padding 0 15px 10px
		font-size fzn - 1px
		z-index 10
		color ctextlight
		word-break break-word
		min-height 19px
		&.characters_left
			position absolute
			right 0
			bottom 0
			color ctextlight
			font-size fzn - 4px
			margin 4px 0 0
			min-height auto
		&.first_line
			padding 12px 15px 0

			&~textarea

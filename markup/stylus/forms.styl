// -------  оформление чекбоксов --------

label.label_check
	display inline-block
	min-width 18px
	min-height 18px

input[type='radio'], input[type='checkbox']
	display none!important
	&:focus
		background cbghighlight

	& + label.label_check
		cursor pointer
		position relative

		.icon
			width 14px
			height 14px
			// box-shadow 0 0 0 2px #D1D1D1
			border 2px solid #D1D1D1
			background #fff
			border-radius 50%
			display inline-block
			appearance none
			vertical-align top
			position relative
			cursor pointer
			box-sizing content-box
			position absolute
			left 0

			&:active
				background rgba(0,0,0,0.03)
			& + span
				margin-left 26px
				display inline-block
	&:checked
		+ label.label_check
			.icon
				// box-shadow inset 0 0 0 5px cl3, inset 0 0 0 9px #fff
				border-color cl3
				border-width 6px
				width 6px
				height 6px
	&:disabled
		+ label.label_check
			cursor no-drop
			color ctextdis
			*
				color ctextdis
			.icon
				background #f5f5f5
				cursor no-drop
				&:after
					color transparent
		&:checked
			+ label.label_check
				.icon
					// box-shadow inset 0 0 0 5px ctextdis, inset 0 0 0 9px #fff
					border-color ctextdis
					&:after
						color #fff

// чекбокс
input[type='checkbox']
	& + label.label_check
		.icon
			width 14px
			height 14px
			border-radius 2px

			&:after
				font-family "mb-icon-font-3"
				text-transform none!important
				font-style normal
				content 's'
				position absolute
				display inline-block
				top 1px
				left 1px
				color #fff
				font-size 12px
				text-align center
				line-height 1
				transition .1s
			// &.big
			// 	width 22px
			// 	height 22px
			// 	&:after
			// 		font-size 14px
			// 		top 4px
			// 		left 4px
	&:checked
		& + label.label_check
			.icon
				background cl3
				border-width 2px
				width 14px
				height 14px
				// box-shadow inset 0 0 0 1.5px cl3

	&:disabled
		&:checked
			+ label.label_check
				.icon
					box-shadow inset 0 0 0 15px ctextdis

	// круглый чекбокс
	& + label.label_check.circle
		min-width 18px
		.icon
			width 14px
			height 14px
			border-radius 20px
			&:after
				top 1px
				left 1px

	// чекбокс switcher
	& + label.label_check.switcher
		min-width 28px
		.icon
			width 24px
			height 14px
			background #F2F2F2
			border-radius 2px
			transition background-color .2s, box-shadow .2s
			margin-right -26px
			vertical-align -2px
			&:after
				content ''
				width 12px
				height 14px
				background #fff
				// box-shadow inset 0 0 0 1.5px cgrey18
				border 2px solid #D1D1D1
				border-radius 2px
				position absolute
				top -2px
				left -2px
				transition left .2s, box-shadow .2s
			& + span
				margin-left 36px
				vertical-align top
	&:disabled
		+ label.label_check.switcher
			.icon
				background #bbb
				border-color #bbb
				&:after
					background #F2F2F2
					border-color #bbb
	&:disabled:checked
		+ label.label_check.switcher
			.icon
				&:after
					border-color #bbb
	&:checked
		+ label.label_check.switcher
			.icon
				background cl3

				&:after
					left 10px
					border-color cl3




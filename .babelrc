{
  "plugins": [
    "syntax-decorators",
    "transform-decorators-legacy",
    "transform-class-properties",
    "react-html-attrs"
  ],
  "presets": [
    ["es2015", { "modules": false }],
    "react",
    "stage-0"  //ES7
  ],
  "env": {
    "development": {
      "presets": [
        "react-hmre"
      ]
    },
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}

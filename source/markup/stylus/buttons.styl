
@import 'variables.styl'
button
	background none
	border none
	font-family ffn
	cursor pointer
	text-align left
	font-weight fwn
	&[disabled]
		color ctextdis
	&::-moz-focus-inner
		border 0
.button
	display inline-block
	font-size fzn
	font-family ffn
	font-weight fwm
	color #fff
	text-transform uppercase
	letter-spacing .6px
	background cl2
	// background-image linear-gradient(right, #37AFAA 0%, cl2 50%, cl2 100%)
	background-repeat no-repeat
	background-position center
	background-size 200% 100%
	text-align center
	height 50px
	line-height 49px
	border-radius brbut
	padding 0 40px
	padding-bottom 3px
	box-sizing border-box
	border none
	text-decoration none
	vertical-align middle
	cursor pointer

	transition background .5s, color .2s, box-shadow .2s
	z-index 1
	overflow hidden
	-webkit-appearance none
	appearance none

	&:hover
		background-color cl2 + 5%
		// background-position 70% 0
		box-shadow 0 2px 2px rgba(#000,0.1), 0 4px 18px -5px rgba(#000,0.2)
		color #fff
		// box-shadow inset 0px -2px 0px 0px rgba(#000,0.2), inset 0px -3px 0px 0px rgba(#fff,0.1), 0 1px 1px rgba(#000,0.2)
		&:before
			// transform scale3d(1,1,1)
			opacity 1
	&:active
		opacity .9
		transition none

	&.second
		background-color cl3 - 5%
		// background-image linear-gradient(right, #B4E30B 0%, cl3 50%, cl3 100%)
		&:hover
			background-color cl3 + 3%
		// &:active
		// 	background-color cl3 - 5%

	&.cancel
		background-color cerror
		&:hover
			background-color cerror + 10%
		// &:active
		// 	background-color cerror - 5%

	&.dark
		background-color cl1
		&:hover
			background-color cl1 + 5%
		// &:active
		// 	background-color cl1 - 5%

	&.clean
		background none!important
		box-shadow none!important
		text-shadow none!important
		color ctext
		text-decoration none
		font-weight fwn
		transition background .2s
		&:hover
			background-color cgrey05!important

		&.disabled, &[disabled]
			color ctextdis
			&:hover
				color ctextdis
	&.grey
		background cgrey05
		box-shadow none
		text-shadow none
		color ctext
		text-decoration none
		font-weight fwn
		transition background .2s
		text-transform none
		font-size fzn + 2px
		&:hover
			background-color cgrey09
		&.disabled, &[disabled]
			color ctextdis
			&:hover
				color ctextdis
		&.xsmall
			font-size fzn - 4px
		&.small
			font-size fzn - 2px
		&.middle
			font-size fzn

	&.white
		background-color #fff
		color ctext
		box-shadow 0 1px 1px rgba(#000,0.1)
		&:hover
			color ctext + 30%

	&.light, &.light_primary, &.light_second
		background-color transparent
		border 1px solid cgrey50
		box-shadow none
		color ctext
		text-shadow none!important
		font-weight fwm
		&:hover
			background-color transparent
			border-color ctext
		&[class*="icon-"]:before
			color ctext
		&.disabled, &[disabled]
			border-color #CFD4DB
			&:hover
				box-shadow none
		&.small
			line-height 35px
		&.xsmall
			line-height 24px
	&.light_primary
		border-color cl2
		color cl2
		&:hover
			border-color cl2 + 20%
			color cl2 + 20%

	&.field
		background-color transparent
		border 1px solid cbd
		box-shadow none
		color ctext
		text-shadow none!important
		font-weight fwm
		&:hover
			background-color cgrey03
		&[class*="icon-"]:before
			color ctext
		&.disabled, &[disabled]
			border-color #CFD4DB
			&:hover
				box-shadow none

	&.round
		border-radius 50px
	// размеры
	&.xxsmall
		height 18px
		line-height 17px
		font-size fzn - 6px
		padding-left 6px
		padding-right 6px
		letter-spacing 0

	&.xsmall
		height 26px
		line-height 25px
		font-size fzn - 5px
		padding-left 10px
		padding-right 10px
		letter-spacing .3px

	&.small
		height 38px
		line-height 36px
		font-size fzn - 4px
		padding-left 20px
		padding-right 20px
		letter-spacing .4px


	&.middle
		height 44px
		line-height 42px
		font-size fzn - 2px
		padding-left 22px
		padding-right 22px
		letter-spacing .5px
		&.wide
			padding-left 40px
			padding-right 40px

	&.full
		width 100%
		text-align center
		padding 0

	&.wide
		padding 0 60px

	&.disabled, &[disabled]
		background-color #CFD4DB
		cursor no-drop
		color #fff
		&:hover
			background-color #CFD4DB
			box-shadow none
			// box-shadow inset 0px -2px 0px 0px rgba(#000,0.2), inset 0px -3px 0px 0px rgba(#fff,0.1)
		// &:active
		// 	text-shadow 0 -1px 0 rgba(#000,0.05)

	&+.button
		margin-left 5px
	&+.button_clean
		margin-left 30px

	&[class*='icon-']
		&:before
			vertical-align -4px
			font-size fzn + 2px
			margin 0 10px 0 -10px

	&.middle[class*='icon-']
		&:before
			vertical-align -4px
			font-size fzn + 2px
			margin 0 10px 0 0px

	&.small[class*='icon-']
		&:before
			vertical-align -3px
			font-size fzn
			margin 0 10px 0 0

	&.xsmall[class*='icon-']
		&:before
			vertical-align -2px
			font-size fzn - 3px
			margin 0 5px 0 0
	&.xxsmall[class*='icon-']
		&:before
			vertical-align -2px
			font-size fzn - 5px
			margin 0 5px 0 0

	&.button_notext
		padding-left 0!important
		padding-right 0!important
		&:before
			float none
			margin 0 15px!important
		&.xsmall
			&:before
				margin 0 5px!important
		&.small
			&:before
				margin 0 8px!important
		&.middle
			&:before
				margin 0 11px!important


	&.loader
		color transparent
		text-shadow none
		background-image url(../images/loading_w.gif)
		background-position center
		background-repeat no-repeat
		background-size auto 40%
		background-color cl2
		transition color .1s
		&:hover
			background-color cl2
			cursor default
			box-shadow none

		&.second, &.second:hover
			background-color cl3
		&.dark, &.dark:hover
			background-color cl1
		&.cancel, &.cancel:hover
			background-color cerror
		&.light, &.light:hover
			background-color transparent
			background-image url(../images/loading.gif)
			background-size auto 40%

		&:active
			text-shadow none


	&:focus
		// outline none

	// &:active
	// 	transition .03s
	// 	background-color cl2 - 5%
	// 	text-shadow 0 -1px 0 rgba(#000,0.2)

	&.noclick
		box-shadow none
		cursor default
		pointer-events none


.buttons_group
	display inline-block
	vertical-align middle
	.button
		border-radius 0
		margin 0
		float left
		border-right 1px solid rgba(#fff,0.2)
		position relative

		&:first-of-type
			border-top-left-radius brbut
			border-bottom-left-radius brbut
		&:last-of-type
			border-top-right-radius brbut
			border-bottom-right-radius brbut
			border-right none
			&:after
				display none
		&.clean
			&:first-of-type
				padding-right 0

.buttons_group_filter
	.button
		background cbglight
		border 1px solid cbglight - 15%
		box-shadow none
		margin-left -1px
		color ctextlight
		text-shadow none
		&:hover
			background cbglight + 20%
		&:after
			display none
		&:first-child
			margin-left 0
		&.active
			background cbglight - 5%
			box-shadow inset 0 1px 1px rgba(#000,0.1)
			cursor default
		.ruble, .dollar, .euro
			color ctextlight
		&.active
			.ruble
				color #C06433
			.dollar
				color cl3 - 10%
			.euro
				color cl2

.delete
	width 18px
	height 18px
	display inline-block
	border-radius 50%
	z-index 10
	background url(../images/icon_delete.svg) no-repeat center
	background-size 18px
	cursor pointer
	transition none
	&:hover
		transform rotate(90deg)
		transition .3s

.trash
	min-width 20px
	height 20px
	display inline-block
	text-align center
	z-index 10
	cursor pointer
	transition color .2s
	font-size fzn + 1px
	color ctexterror!important
	&:before
		margin 0
		width auto
		color ctexterror
	&:hover
		color ctexterror + 20%!important
		&:before
			color ctexterror + 20%

a.block_close
	position absolute
	right 10px
	top 8px
	color ctextlight
	font-size fzn - 4px
	&:hover
		color ctext
		&:before
			transform none

.button_clean
	color ctext
	text-decoration none
	font-size fzn - 2px
	display inline-block
	// font-weight fwm
	text-transform uppercase
	letter-spacing 0.3px
	position relative
	&:before
		margin-right 7px
		text-decoration none
		font-size fzn

	// подчеркивание
	&:after
		content ''
		height 1px
		position absolute
		bottom 0
		left 0
		right 0
		background cgrey36
		transition background .1s

	&:hover
		color ctext
		&:after
			background-color ctext
	&.small
		font-size fzn - 4px
		&:before
			font-size fzn - 2px
	&.xsmall
		font-size fzn - 5px
		&:before
			font-size fzn - 3px
	&.big
		font-size fzn + 2px
		&:before
			font-size fzn + 3px

	&.disabled, &[disabled]
		cursor no-drop
		color ctextdis
		&:after
			background cgrey18
		&:hover
			color ctextdis
			&:after
				background cgrey18
	&[class*="icon-"]
		&:after
			left 24px
		&.small
			&:after
				left 22px
		&.xsmall
			&:after
				left 21px
		&.big
			&:after
				left 27px

	& + .button_clean
		margin-left 20px
	& + .button_clean_dropdown
		margin-left 10px



.button_clean_dropdown
	width 20px
	height 20px
	display inline-block
	vertical-align middle
	color ctextlight
	text-align center
	font-size fzn - 2px
	&:before
		width auto
		min-width auto
		margin 0
	&:hover
		color clink

	&.small
		width 16px
		height 16px
		font-size fzn - 3px



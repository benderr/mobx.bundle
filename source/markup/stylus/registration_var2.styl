@charset "utf-8"

@import 'nib'
@import 'variables.styl'

brform = 2px

html, body
	min-width 240px
	animation none


.reg_var2
	background cbglight
	position absolute
	width 100%
	min-height 100%
	background radial-gradient(65% 100%, cbglight 45%, cbglight - 20% 100%)
	// background-size 115% auto, 100% 100%

	.form_group
		margin-bottom 20px

	input[type="text"],
	input[type="password"],
	input[type="search"],
	input[type="email"],
	input[type="tel"],
	input[type="time"],
	input[type="date"],
	input[type="number"],
	textarea
		border-radius brform
		box-shadow none
		height 46px
		font-size fzn
	.phone_code
		position absolute
		color ctextlight
		height 46px
		line-height 46px
		padding 0 15px
		border-right 1px solid cbd
	.phone_number
		padding-left 60px



	.ms-choice
		height 46px
		border-radius brform
		font-size fzn
		box-shadow none



	.wrap
		width 544px
		margin 0 auto
		min-height 100vh
		box-sizing border-box
		padding-bottom 70px
		padding-top calc((100vh - 830px)/2)
		animation-name zoomIn
		animation-duration .5s
		animation-fill-mode backwards

		&.login
			width 420px
			.reg_section
				height auto
		&.auth_partner
			width 460px
		&.reg_admin
			width 700px

	.reg_header
		padding 25px 0
		.logo
			display block
			width 100%
			height 43px
			background url(../images/logo.svg) no-repeat center 0
			background-size auto 100%
			text-indent -10000em
		.slogan
			display block
			text-align center
			color cl1
			font-size fzn + 2px
			margin 12px 0 0
		.header_links
			position absolute
			right 0
			top 45px
	.reg_section
		width 100%
		box-shadow 4px 4px 0 rgba(cl1,0.06)


	.reg_article
		background #fff
		padding 30px 50px
		box-sizing border-box
		vertical-align top
		h1
			color ctext
		p
			margin 15px 0
			&:first-of-type
				margin-top 0
		// .col.half
		// 	width 47.5%
		// 	margin-left 5%
		// 	&:first-child
		// 		margin-left 0
		.reg_text_block
			padding 15px 50px
			margin 0 -50px 25px
			background cbgsky
			text-align center
			font-size fzn - 2px
			line-height 1.4
		.copyright
			display none

		.wizard_steps
			margin-left -50px
			margin-right -50px
			margin-bottom 20px
			// .label
			// 	margin-bottom 4px
			// .active, .done
			// 	.label
			// 		margin-bottom 0


		.info_sms
			max-width 1000px
			margin-left -50px
			margin-right -50px
			margin-bottom -30px
			padding-left 50px
			padding-right 50px
			padding-bottom 30px
		.sms_confirm
			margin 0 -50px -30px
		.form_buttons
			text-align center

		.field_reg_ogrn
			width 100%
			margin-left auto
			margin-right auto
			input
				font-size fzn + 2px

		.loading
			margin 30px 0


	.login
		// animation-name zoomInUp
		// animation-duration 1s
		// animation-fill-mode both
		.reg_section
			box-shadow none
			min-height 0px
		.reg_header
			padding 9vh 0 20px
			text-align center
			.title
				margin 11vh 0 0
				font-size 22px
				color ctextlight
				font-weight fwl
				text-transform uppercase

		.reg_article
			display block
			width 100%
			padding 44px 50px
			box-shadow 7px 7px 0 rgba(cl1,0.1)
			.info
				margin-left -50px
				margin-right -50px
				padding-left 50px
				padding-right 50px
			.info_sms
				margin-top 30px
				margin-bottom -45px
		.form
			margin 0

		.login_links
			padding 20px 0 0
			text-align center
			a

				font-size fzn - 2px
				display inline-block
				margin 0 10px
				opacity .7
				&:hover
					color cl2
					opacity 1

	.share
		border-top 1px solid cbd + 30%
		padding 20px 0 0
		margin 30px 0 0
		font-size fzn - 2px
		color ctextlight
		.soc
			margin 20px 0 0



	.not_found_company
		p
			color ctext

	.file_upload_list
		background cbgsky
		margin 0 -50px
		padding 20px 50px 5px
		// .file_upload_block
		// 	.file_name
		// 		display none
	.docs_block
		.file_upload_list
			background none
			margin 0
			padding 0

	.ogrn_status_success, .ogrn_status_error
		background-image url(../images/account_widget_status_success.svg)
		background-repeat no-repeat
		background-position 10px 7px
		padding-top 12px
		padding-bottom 15px
		padding-left 55px

	.ogrn_status_error
		background-image url(../images/account_widget_status_error.svg)


	.search_company


		.search_company_title
			color ctext
			font-size fzn
			margin 0 -50px 20px
			background cbgsky
			padding 15px 50px
			text-align center

			&:before
				font-size 22px
				vertical-align -6px
				margin-right 5px

		.search_company_edit_link
			display inline-block
			margin 0 0 15px
			text-decoration none
			color clink
			border-bottom 1px dashed clink
			font-size fzn - 1px
			&:hover
				color cl2
				border-bottom-color cl2

		.switch_group label
			font-size 14px
	.reg_admin
		h3
			text-align center
			font-weight 300
			margin 0 0 40px

	.reg_footer
		position absolute
		bottom 15px
		width 100%
		margin 25px 0 0
		font-size fzn - 4px
		color ctextlight
		text-align center


	.show_mobile
		display none

@media screen and (max-width: 850px)
	body
		background #fff
	.reg_var2
		background cbglight
		-webkit-text-size-adjust 100%


		.back_anim
			display none!important
		.wrap
			width 80%
			margin-bottom 0
			padding-top 0px
			padding-bottom 15px
			min-width 320px
			min-height 0
			&.login
				width 80%
				.reg_header
					padding-top 15px
					padding-bottom 15px
					.title
						margin-top 30px
				.reg_article
					padding 20px
				.login_links
					background #fff
					padding 10px 0 20px
					a
						color clink
		.reg_header
			padding-top 15px
			padding-bottom 15px
			text-align center
			.logo
				width 100%
				background-size auto 100%
				background-position center
				height 12vw
				max-height 50px
			.slogan
				font-size fzn + 2px
				margin-top 10px
			.header_links
				position relative
				text-align center
				top auto
				right auto
				margin-top 15px

		.reg_section
			height auto
			box-shadow none
		.reg_section,
		.reg_side,
		.reg_article
			display block
			width 100%
		.reg_side
			padding 20px
			.title
				margin-bottom 15px
			.copyright
				display none
		.reg_article
			padding 20px

			.reg_text_block, .search_company_title
				margin-left -20px
				margin-right -20px
				padding-left 20px
				padding-right 20px
			.wizard_steps
				margin-left -20px
				margin-right -20px
			.sms_confirm
				margin-left -20px
				margin-right -20px
			.w80
				width 100%!important
			// .col, .column
			// 	float none
			// 	margin-left 0
			// 	width 100%
			input.column.half:first-child
				margin-bottom 15px
			.form_buttons
				.button
					width 100%
					padding-right 5px
					padding-left 5px
				.button_clean
					width 100%
					margin 15px 0 0!important
					text-align center
				.links
					margin 20px 0 0
					display block
					a
						position relative
						display block
						text-align center
						margin 0 0 10px
						color clink
			.copyright
				display block

			.info_sms
				margin-left -20px
				margin-right -20px
				padding-left 20px
				padding-right 20px
				margin-bottom -20px
				padding-bottom 20px
		.file_upload_list
			margin-left -20px
			margin-right -20px
			padding-left 20px
			padding-right 20px
		.reg_footer
			display none

		.login
			.reg_article
				box-shadow none
				.info
					margin-left -20px
					margin-right -20px
					padding-left 20px
					padding-right 20px
				.info_sms
					padding-bottom 20px
					margin-bottom -20px

			.reg_section
				box-shadow 7px 7px 0 rgba(cl1,0.1)

		.search_company
			margin-left -20px
			margin-right -20px
			padding-left 20px
			padding-right 20px



	.list_company
		.company_item_info
			.property_label
				text-align left
			.select_company
				opacity 1

	.popup_overlay
		position fixed
		transform translateZ(1px)
	.popup_table
		position absolute
		display block
	.popup_cell
		padding 0
		display block
		position absolute
		width 100%
		height 100%
		overflow auto
		-webkit-overflow-scrolling touch
	.popup_layer
		min-height calc(100% - 20px)
		box-sizing border-box
		width auto
		padding 40px 20px
		margin 10px
		-webkit-text-size-adjust 100%




@media screen and (max-width: 550px)
	.reg_var2
		.wrap, .wrap.login
			width 90%
		.reg_article
			.col.half
				width 100%
				margin-left 0
		.found_company
			background-image none
			padding-left 20px
		.info_error
			margin-left -20px
			margin-right -20px
			padding-left 20px
			padding-right 20px



@media screen and (max-width: 440px)
	.reg_var2
		.wrap, .wrap.login
			width 100%
			padding-bottom 0
		.reg_article
			.col.half
				width 100%
				margin-left 0
@media screen and (max-width: 700px)
	.reg_var2
		.search_company
			.switch_group
				.show_mobile
					display block
				.hide_mobile
					display none
	.popup_layer
		.button
			width 100%
		.button_clean
			margin 20px 0 0
			width 100%
			text-align center